<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@color/background"
        tools:context=".puntos">

        <!-- Título -->
        <TextView
            android:id="@+id/tvResultsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/final_results"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"/>

        <!-- Marcador Final -->
        <TextView
            android:id="@+id/tvFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 - 0"
            android:textSize="72sp"
            android:textStyle="bold"
            android:textColor="@color/score_color"
            app:layout_constraintTop_toBottomOf="@id/tvResultsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"/>

        <!-- Mensaje de Resultado -->
        <TextView
            android:id="@+id/tvResultMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_tie"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/result_color"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvFinalScore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_game"
            android:textSize="18sp"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="141dp"
            android:layout_height="142dp"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="390dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>